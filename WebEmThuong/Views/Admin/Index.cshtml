<h2>this is admin page</h2>

<script>
    $(document).ready(function () {
        debugger;
        var connection = new signalR.HubConnectionBuilder().withUrl("/reservationHub").build();
        connection.on("ReceiveReservationNotification", function () {
            // Hiển thị thông báo khi có đặt bàn mới
            alert("Có một đặt bàn mới!");
        });

        connection.start().then(function () {
            console.log("Connected to ReservationHub.");
        }).catch(function (err) {
            return console.error(err.toString());
        });
    });
</script>