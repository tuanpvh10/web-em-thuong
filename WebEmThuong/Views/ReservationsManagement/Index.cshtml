@model IEnumerable<WebEmThuong.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] Bau's</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        h1 {
            text-align: center;
            margin-top: 20px;
        }

        .waiting {
            background-color: red;
            color:white;
        }

        .confirmed {
            background-color: yellow;
            color: black;
        }

        .done {
            background-color: green;
            color: white;
        }


        .table {
            margin-top: 20px;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                background-color: #f8f9fa;
            }

            .table a {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Reservation System Management</h1>
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>@Html.DisplayNameFor(model => model.Time)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.NumberPeople)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Time)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.NumberPeople)</td>
                        <td class="@item.Status.ToLower()">@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script>
        $(document).ready(function () {
            var connection = new signalR.HubConnectionBuilder().withUrl("/myHub").build();
            connection.on("ReceiveReservationNotification", function (phoneNumber) {
                var audio = new Audio('./notif/epic-hybrid-logo-157092.mp3');
                audio.play();
                alert("Have one new reservation with phone is:  " + phoneNumber);
            });

            connection.start().then(function () {
                console.log("Connected to ReservationHub.");
            }).catch(function (err) {
                return console.error(err.toString());
            });
        });
    </script>
</body>
</html>
