@model WebEmThuong.Models.Reservation

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        h1 {
            text-align: center;
            margin-top: 20px;
        }

        .details-container {
            margin-top: 20px;
        }

        .details-header {
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
        }

        .details-content {
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #e3e3e3;
            border-radius: 5px;
        }

            .details-content dt {
                font-weight: bold;
            }

        .btn-back, .btn-edit {
            margin-top: 20px;
        }

        .waiting {
            background-color: red;
            color: white;
        }

        .confirmed {
            background-color: yellow;
            color: black;
        }

        .done {
            background-color: green;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container details-container">
        <h1>Details</h1>
        <div class="details-header">
            <h4>Reservation Details</h4>
        </div>
        <div class="details-content">
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Time)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Time)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NumberPeople)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NumberPeople)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
            </dl>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-primary btn-edit" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-secondary btn-back" asp-action="Index">Back to List</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
