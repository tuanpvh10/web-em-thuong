@model WebEmThuong.Models.Reservation

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        h1, h3 {
            text-align: center;
            margin-top: 20px;
        }

        .delete-container {
            margin-top: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-delete, .btn-back {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container delete-container">
        <h1>Delete Reservation</h1>
        <h3>Are you sure you want to delete this reservation?</h3>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div>
                    <h4>Reservation</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">

                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Time)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Time)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.NumberPeople)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NumberPeople)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger btn-delete" /> |
                        <a class="btn btn-secondary btn-back" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
